<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/view_title" />

    <!-- Phone Number Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp"
       > <!-- Added background for clear separation -->

        <com.hbb20.CountryCodePicker
            android:id="@+id/cd_code"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            app:ccp_defaultNameCode="IND"
            app:ccp_autoDetectCountry="true"
            app:ccp_showFlag="true"
            app:ccp_showNameCode="true"
            app:ccp_showFullName="true"
            tools:ignore="MissingClass" />

        <EditText
            android:id="@+id/edit_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/reg_input_phone"
            android:inputType="phone"
            android:textColor="@color/textColor"
            android:textColorHint="@color/gray3"
            android:textSize="16sp"
            android:background="@null"
            android:padding="10dp"
            /> <!-- Custom background for input -->

    </LinearLayout>

    <View style="@style/line2" />

    <!-- Verification Code Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_marginTop="10dp"
        >

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/icon_reg_code"
            android:layout_marginEnd="10dp" />

        <EditText
            android:id="@+id/edit_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/reg_input_code"
            android:inputType="number"
            android:textColor="@color/textColor"
            android:textColorHint="@color/gray3"
            android:textSize="16sp"
            android:background="@null"
            android:padding="10dp"
             />

        <TextView
            android:id="@+id/btn_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:gravity="center"
            android:text="@string/reg_get_code"
            android:textColor="@color/reg_btn_code"
            android:textSize="14sp"

            android:onClick="registerClick" />
    </LinearLayout>

    <View style="@style/line2" />

    <!-- Password Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_marginTop="10dp"
      >

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/icon_reg_pwd"
            android:layout_marginEnd="10dp" />

        <com.gawilive.main.views.PasswordEditText
            android:id="@+id/edit_pwd_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/reg_input_pwd_1"
            android:inputType="textPassword"
            android:padding="10dp"
            android:background="@null"
            android:textColor="@color/textColor"
            android:textColorHint="@color/gray3"
            android:textSize="16sp" />
    </LinearLayout>

    <View style="@style/line2" />

    <!-- Confirm Password Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_marginTop="10dp"
       >

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/icon_reg_pwd"
            android:layout_marginEnd="10dp" />

        <com.gawilive.main.views.PasswordEditText
            android:id="@+id/edit_pwd_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/reg_input_pwd_2"
            android:inputType="textPassword"
            android:textColor="@color/textColor"
            android:textColorHint="@color/gray3"
            android:textSize="16sp"
            android:padding="10dp"
            android:background="@null" />
    </LinearLayout>

    <View style="@style/line2" />

    <!-- Tip Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/phone_msg_tip"
        android:textColor="@color/gray3"
        android:textSize="12sp"
        android:layout_marginTop="12dp" />

    <!-- Register Button -->
    <TextView
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="@string/reg_register_and_login"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:background="@null"
        android:onClick="registerClick" />
</LinearLayout>
